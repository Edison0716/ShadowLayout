<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShadowLayout">
        <attr name="android:foreground"/>
        <attr name="shadowMargin" format="dimension"/>
        <attr name="shadowMarginTop" format="dimension"/>
        <attr name="shadowMarginLeft" format="dimension"/>
        <attr name="shadowMarginRight" format="dimension"/>
        <attr name="shadowMarginBottom" format="dimension"/>
        <attr name="cornerRadius" format="dimension"/>
        <attr name="cornerRadiusTL" format="dimension"/>
        <attr name="cornerRadiusTR" format="dimension"/>
        <attr name="cornerRadiusBL" format="dimension"/>
        <attr name="cornerRadiusBR" format="dimension"/>
        <attr name="pressedColor" format="color"/>
        <attr name="shadowColor" format="color"/>
        <attr name="shadowDx" format="float"/>
        <attr name="shadowDy" format="float"/>
        <attr name="shadowRadius" format="dimension"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="layout_gravity">
            <flag name="top"
                value="0x30"/>
            <flag name="bottom"
                value="0x50"/>
            <flag name="left"
                value="0x03"/>
            <flag name="right"
                value="0x05"/>
            <flag name="center_vertical"
                value="0x10"/>
            <flag name="fill_vertical"
                value="0x70"/>
            <flag name="center_horizontal"
                value="0x01"/>
            <flag name="fill_horizontal"
                value="0x07"/>
            <flag name="center"
                value="0x11"/>
            <flag name="fill"
                value="0x77"/>
            <flag name="clip_vertical"
                value="0x80"/>
            <flag name="clip_horizontal"
                value="0x08"/>
            <flag name="start"
                value="0x00800003"/>
            <flag name="end"
                value="0x00800005"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ShadowFrameLayout">
        <!--阴影的圆角大小-->
        <attr name="hl_cornerRadius" format="dimension" />
        <!--阴影的扩散范围(也可以理解为扩散程度)-->
        <attr name="hl_shadowLimit" format="dimension" />
        <attr name="hl_shadowColor" format="color" />
        <attr name="hl_shadowBackColor" format="color" />
        <!--x轴的偏移量-->
        <attr name="hl_dx" format="dimension" />
        <!--y轴的偏移量-->
        <attr name="hl_dy" format="dimension" />
        <!--左边是否显示阴影-->
        <attr name="hl_leftShow" format="boolean" />
        <!--右边是否显示阴影-->
        <attr name="hl_rightShow" format="boolean" />
        <!--上边是否显示阴影-->
        <attr name="hl_topShow" format="boolean" />
        <!--下面是否显示阴影-->
        <attr name="hl_bottomShow" format="boolean" />

    </declare-styleable>

    <declare-styleable name="MyTabView">
        <attr name="tab_unselected_bg_corner_radius" format="dimension"/>
        <attr name="tab_selected_bg_corner_radius" format="dimension"/>
        <!-- 未选中 与 选中tab 高度差-->
        <attr name="tab_unselected_bg_dy" format="dimension"/>
        <attr name="tab_selected_bg_width" format="dimension"/>
        <attr name="tab_selected_text_color" format="color"/>
        <attr name="tab_selected_bg_color" format="color"/>
        <attr name="tab_unselected_bg_color" format="color"/>
        <attr name="tab_unselected_text_color" format="color"/>
    </declare-styleable>
</resources>