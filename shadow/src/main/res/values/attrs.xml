<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ShadowFrameLayout">
        <!--阴影的圆角大小-->
        <attr name="hl_cornerRadius" format="dimension" />
        <!--阴影的扩散范围(也可以理解为扩散程度)-->
        <attr name="hl_shadowLimit" format="dimension" />
        <attr name="hl_shadowColor" format="color" />
        <attr name="hl_shadowBackColor" format="color" />
        <!--x轴的偏移量-->
        <attr name="hl_dx" format="dimension" />
        <!--y轴的偏移量-->
        <attr name="hl_dy" format="dimension" />
        <!--左边是否显示阴影-->
        <attr name="hl_leftShow" format="boolean" />
        <!--右边是否显示阴影-->
        <attr name="hl_rightShow" format="boolean" />
        <!--上边是否显示阴影-->
        <attr name="hl_topShow" format="boolean" />
        <!--下面是否显示阴影-->
        <attr name="hl_bottomShow" format="boolean" />

    </declare-styleable>

    <declare-styleable name="MyTabView">
        <attr name="tab_unselected_bg_corner_radius" format="dimension"/>
        <attr name="tab_selected_bg_corner_radius" format="dimension"/>
        <!-- 未选中 与 选中tab 高度差-->
        <attr name="tab_unselected_bg_dy" format="dimension"/>
        <attr name="tab_selected_bg_width" format="dimension"/>
        <attr name="tab_selected_text_color" format="color"/>
        <attr name="tab_selected_bg_color" format="color"/>
        <attr name="tab_unselected_bg_color" format="color"/>
        <attr name="tab_unselected_text_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="EHaiWidgetShadowLayout">
        <!--圆角-->
        <attr name="shadowCornerRadius" format="dimension" />
        <!--阴影颜色-->
        <attr name="shadowColor" format="color" />
        <!--背景颜色-->
        <attr name="shadowBackgroundStartColor" format="color" />
        <attr name="shadowBackgroundEndColor" format="color"/>
        <!--阴影扩散大小-->
        <attr name="shadowSpreadSize" format="dimension" />
        <!--偏移量-->
        <attr name="shadowDx" format="dimension" />
        <attr name="shadowDy" format="dimension" />
    </declare-styleable>
</resources>